# Configuración de la aplicación
APP_NAME=Sistema de Ruteo Inteligente
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# API Keys para geocodificación
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
OPENCAGE_API_KEY=your_opencage_key_here

# Base de datos (opcional)
DATABASE_URL=postgresql://user:password@localhost:5432/ruteo_db
REDIS_URL=redis://localhost:6379/0

# Configuración de OSM
OSM_CACHE_DIR=./cache/osm
OSM_NETWORK_TYPE=drive  # drive, walk, bike, all

# Parámetros de optimización
MAX_VEHICLES_TO_EVALUATE=50
MAX_ROUTE_CALCULATION_TIME=5.0  # segundos
ENABLE_ML_PREDICTIONS=True

# Pesos del scoring (deben sumar 1.0)
WEIGHT_DISTANCE=0.30
WEIGHT_CAPACITY=0.20
WEIGHT_TIME_URGENCY=0.25
WEIGHT_ROUTE_COMPATIBILITY=0.15
WEIGHT_VEHICLE_PERFORMANCE=0.10

# Configuración de cache
ENABLE_ROUTE_CACHE=True
ROUTE_CACHE_TTL=3600  # segundos

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ruteo.log
