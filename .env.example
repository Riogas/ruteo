# ============================================
# Configuración del Sistema de Ruteo
# ============================================
# Copia este archivo a .env y ajusta los valores según necesidad
# Uso en Docker: Los valores se pueden sobrescribir en docker-compose.yml

# ============================================
# APLICACIÓN
# ============================================
APP_NAME=Sistema de Ruteo Inteligente
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ============================================
# GEOCODIFICACIÓN
# ============================================
# Provider: nominatim (gratis) | google | opencage
GEOCODING_PROVIDER=nominatim

# Nominatim (OpenStreetMap - GRATIS, sin API key)
NOMINATIM_USER_AGENT=ruteo-system/1.0
NOMINATIM_TIMEOUT=30
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org

# Google Maps (requiere API key)
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# OpenCage (requiere API key)
OPENCAGE_API_KEY=your_opencage_key_here

# ============================================
# CACHE Y PERSISTENCIA
# ============================================
# Redis
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=true
CACHE_DIR=./cache

# Base de datos (opcional, para futuras features)
DATABASE_URL=postgresql://user:password@localhost:5432/ruteo_db

# ============================================
# OSM (OpenStreetMap para rutas)
# ============================================
OSM_CACHE_DIR=./cache/osm
OSM_NETWORK_TYPE=drive  # drive, walk, bike, all

# ============================================
# OPTIMIZACIÓN DE RUTAS
# ============================================
MAX_VEHICLES_TO_EVALUATE=50
MAX_ROUTE_CALCULATION_TIME=5.0  # segundos
ENABLE_ML_PREDICTIONS=True

# Pesos del scoring (deben sumar 1.0)
WEIGHT_DISTANCE=0.30
WEIGHT_CAPACITY=0.20
WEIGHT_TIME_URGENCY=0.25
WEIGHT_ROUTE_COMPATIBILITY=0.15
WEIGHT_VEHICLE_PERFORMANCE=0.10

# ============================================
# ZONA HORARIA
# ============================================
TZ=America/Montevideo

# Configuración de cache
ENABLE_ROUTE_CACHE=True
ROUTE_CACHE_TTL=3600  # segundos

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ruteo.log
